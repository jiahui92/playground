  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "nestjs",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/nestjs",
      "program": "${workspaceFolder}/nestjs/src/main.ts",
      "runtimeExecutable": "node",
      "runtimeArgs": [
          "-r",
          "ts-node/register"
      ],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}